#!/bin/sh /etc/rc.common

START=60
PNAME="autoauth.sh"
stop() {
    killall -q ${PNAME}
}
start() {
    if [ $(curl -sI -w "%{http_code}" -o /dev/null connect.rom.miui.com/generate_204) = 204 ]; then
        logger -t "autoauth" -p user.info "The internet connection works!"
    else
        stop
        logger -t "autoauth" -p user.info "HELLO!"
        /etc/${PNAME} &
    fi
}
restart() {
    stop
    start
}
